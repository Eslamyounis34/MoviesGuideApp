<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e5e5e5"
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    tools:context="com.example.eslamypunis.nvdrawer.ViewInfo">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/moviebackdrop"></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieposter"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="215dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movietitle"
                android:textSize="20dp"
                android:textColor="#00695c"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/moviebackdrop"
                android:layout_toRightOf="@id/movieposter"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingbar"
                android:numStars="5"
                android:rating="4.3"
                android:stepSize="0.0"
                android:theme="@style/RatingBar"
                android:layout_marginLeft="8dp"
                style="?android:attr/ratingBarStyleSmall"
                android:max="10"
                android:layout_toRightOf="@id/movieposter"
                android:layout_below="@id/movietitle"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/stariconmovie"
                android:layout_below="@id/ratingbar"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/rateicon"
                android:layout_toRightOf="@id/movieposter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movierate"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/rateicon"
                android:layout_below="@id/ratingbar"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="17dp"
                android:layout_gravity="center_horizontal"/>

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/infoimg"
                    android:layout_margin="5dp"
                    android:id="@+id/overviewicon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OverView"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@id/overviewicon"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieoverview"
                    android:layout_margin="10dp"
                    android:layout_below="@id/overviewicon"
                    android:layout_gravity="center_horizontal"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release Date"
                    android:textColor="#00695C"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:textSize="15dp"
                    android:id="@+id/releasetext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#00695C"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:textSize="15dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/statustext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moviedate"
                    android:layout_below="@id/releasetext"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moviestatus"
                    android:layout_below="@id/statustext"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Run Time"
                    android:layout_marginLeft="8dp"
                    android:textColor="#00695C"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:id="@+id/runtimetext"
                    android:layout_below="@id/moviedate"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieruntime"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@id/runtimetext"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:textColor="#00695C"
                    android:textStyle="bold"
                    android:layout_below="@id/moviestatus"
                    android:layout_marginRight="8dp"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/budgettext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moviebudget"
                    android:layout_below="@id/budgettext"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/castimg"
                    android:layout_margin="5dp"
                    android:id="@+id/casticon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/casttext"
                    android:text="Cast"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@id/casticon"
                    android:layout_marginLeft="8dp"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/casticon"
                    android:id="@+id/recycler"
                    android:orientation="horizontal"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#fff"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/videoimg"
                    android:layout_margin="5dp"
                    android:id="@+id/videoicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/videotext"
                    android:text="Videos"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_toRightOf="@id/videoicon"
                    android:layout_marginLeft="8dp"/>
                <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/videosrecycler"
                    android:layout_below="@id/videoicon"
                    android:orientation="horizontal"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#fff"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/photoicon"
                    android:layout_margin="5dp"
                    android:id="@+id/imageicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imagetext"
                    android:text="Photos"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@id/imageicon"
                    android:layout_marginLeft="8dp"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/imageicon"
                    android:id="@+id/imagesrecycler"
                    android:orientation="horizontal"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#fff"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:id="@+id/gotoreviews">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/overviewimg"
                    android:layout_margin="5dp"
                    android:id="@+id/reviewicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviewtext"
                    android:text="Reviews"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@id/reviewicon"
                    android:layout_marginLeft="8dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <io.github.yavski.fabspeeddial.FabSpeedDial
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabsetting"
        app:fabMenu="@menu/fabmenu"
        android:layout_gravity="bottom|end"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:fabGravity="bottom_end"
        app:fabBackgroundTint="#00695c"
        app:fabDrawableTint="#fff"
        app:miniFabTitleTextColor="?attr/colorPrimaryDark"
        ></io.github.yavski.fabspeeddial.FabSpeedDial>


</RelativeLayout>
