<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/favourite_movie_image"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/favourite_movie_image"
                android:layout_margin="3dp"
                android:id="@+id/favourite_movie_text"
                android:textColor="#000"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/star"
                android:layout_below="@id/favourite_movie_text"
                android:layout_toRightOf="@id/favourite_movie_image"
                android:layout_marginLeft="3dp"
                android:id="@+id/favstaricon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favsearchrate"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/favourite_movie_text"
                android:layout_toRightOf="@id/favstaricon"
                android:textColor="#000"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>